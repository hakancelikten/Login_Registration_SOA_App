@model Entities.DTOs.UserForRegisterDto
@{
    ViewBag.Title = "Register";
}
<h2>@ViewBag.Title </h2>

<!doctype html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <script src="https://www.google.com/recaptcha/api.js"></script>
</head>
<body>
    @using (Html.BeginForm("RegisterUser", "Register", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h4>Create a new account.</h4>
        <hr />
        @Html.ValidationSummary()

        <div class="form-group">
            @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.FirstName, new { @class = "form-control" ,@required  = "required"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.LastName, new { @class = "form-control" ,@required  = "required"})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email , new { @class = "form-control" ,@required  = "required"})
            </div>
        </div>
        <div class="form-group" hidden="hidden">
            @Html.LabelFor(m => m.ReferralLink, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.ReferralLink, new { @class = "form-control" ,@Value = @ViewBag.ReferralLink})
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.PasswordFor(m => m.Password, new { @class = "form-control",@required  = "required" })
            </div>
        </div>

        <div class="g-recaptcha" data-sitekey="6LcvOBQlAAAAAMZ6jVKlivGzzKp9XHpqugtdPJUi"></div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Register" />
            </div>
        </div>
    }

</body>
</html>

